@{
    ViewData["Title"] = "Add a new student";
}

<form method="post">
   <div class="mb-3">
    <label class="form-label">Lastname</label>
    <input type="text" required class="form-control" name="Student.Lastname">
  </div>
  <div class="mb-3">
    <label class="form-label">Firstname</label>
    <input type="text" required class="form-control" name="Student.Name">
  </div>
  <div class="mb-3">
    <label class="form-label">Group number</label>
    <input type="number" required class="form-control" name="Student.GroupNumber">
  </div>
  <div class="mb-3">
    <label class="form-label">Name of specialty</label>
    <input type="text" required class="form-control" name="Student.NameSpecialty">
  </div> 
  <div class="mb-3">
    <label class="form-label">Average score</label>
    <input type="text" required class="form-control" name="Student.AverageScore">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
  <a class="btn btn-primary" asp-action="List">back</a>

</form>